{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{%block stylesheets%}
    {{encore_entry_link_tags('login')}}
{%endblock%}
{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="login-box">
        <h2>Login</h2>
        <form method="post">
            <div class="user-box">
                <input type="email" name="email" value="{{last_username}}" autocomplete="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" required autofocus>
                <label>Username</label>
            </div>
            <div class="user-box">
                <input type="password" name="password" autocomplete="current-password" class="form-control" id="InputPassword" required>
                <label>Password</label>

            </div>
            <button class="btn" style="color: white; background-color: #03e9f4" type="submit">Submit</button>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
    </div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}


{% endblock %}
